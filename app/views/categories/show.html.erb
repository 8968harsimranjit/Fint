<% @category.subcategories.each do |post|%>
<div class="category-post">
<h4><span class= "post-title"><%= post.name%></span></h4>
<i><span class= "post-date"><%= time_ago_in_words post.created_at %> ago</span></i>
</div>
<% end %>
<% if @posts= nil then %>
<p>No posts to display</p>
<% end %>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
